<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('command-search');
    const commandItems = document.querySelectorAll('.command-item');
    const categoryFilters = document.querySelectorAll('.dropdown-item[data-category]');
    const commandCategories = document.querySelectorAll('.command-category');
    
    let currentCategory = 'all';
    
    // Filter commands by search term
    searchInput.addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase();
      
      commandItems.forEach(item => {
        const command = item.querySelector('code').textContent.toLowerCase();
        const description = item.querySelector('td:nth-child(2)').textContent.toLowerCase();
        const isVisible = command.includes(searchTerm) || description.includes(searchTerm);
        
        item.style.display = isVisible ? '' : 'none';
      });
      
      // Check if all commands in a category are hidden, then hide the category
      commandCategories.forEach(category => {
        const visibleItems = category.querySelectorAll('.command-item[style="display: none;"]');
        const allItems = category.querySelectorAll('.command-item');
        
        if (visibleItems.length === allItems.length) {
          category.style.display = 'none';
        } else {
          if (currentCategory === 'all' || category.dataset.category === currentCategory) {
            category.style.display = '';
          }
        }
      });
    });
    
    // Filter commands by category
    categoryFilters.forEach(filter => {
      filter.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Update active state
        categoryFilters.forEach(f => f.classList.remove('active'));
        this.classList.add('active');
        
        currentCategory = this.dataset.category;
        
        if (currentCategory === 'all') {
          commandCategories.forEach(category => {
            category.style.display = '';
          });
        } else {
          commandCategories.forEach(category => {
            if (category.dataset.category === currentCategory) {
              category.style.display = '';
            } else {
              category.style.display = 'none';
            }
          });
        }
      });
    });
  });
</script>

