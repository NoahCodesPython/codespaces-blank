<%- include('../partials/header') %>

<div class="container py-5">
  <div class="row mb-4">
    <div class="col-md-12">
      <h1>Bot Commands</h1>
      <p class="lead">A complete list of available commands for Aquire Bot</p>
    </div>
  </div>

  <% if (!commands || commands.length === 0) { %>
    <div class="alert alert-warning">No commands available at the moment.</div>
  <% } else { %>
    <% Object.keys(commands).forEach(category => { %>
      <h3 id="<%= category %>"><%= category %></h3>
      <ul>
        <% commands[category].forEach(command => { %>
          <li>
            <strong><%= command.name %></strong>: <%= command.description || 'No description available' %>
          </li>
        <% }); %>
      </ul>
    <% }); %>
  <% } %>
</div>

<%- include('../partials/footer') %>