<div class="col-md-3 col-lg-2">
  <div class="sidebar">
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light h-100">
      <div class="text-center mb-3">
        <% if (guild.icon) { %>
          <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="<%= guild.name %>" 
               class="server-icon mb-2" width="80" height="80">
        <% } else { %>
          <div class="server-icon bg-primary text-white rounded-circle mb-2 mx-auto d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
            <%= guild.name.split(' ').map(word => word[0]).join('').substring(0, 2).toUpperCase() %>
          </div>
        <% } %>
        <h5 class="mb-0"><%= guild.name %></h5>
      </div>
      
      <hr>
      
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="/servers/<%= guild.id %>" class="nav-link <%= path === `/servers/${guild.id}` ? 'active' : 'text-dark' %>">
            <i class="fas fa-home me-2"></i>
            Overview
          </a>
        </li>
        <li class="nav-item">
          <a href="/servers/<%= guild.id %>/settings" class="nav-link <%= path === `/servers/${guild.id}/settings` ? 'active' : 'text-dark' %>">
            <i class="fas fa-cogs me-2"></i>
            General Settings
          </a>
        </li>
        <li class="nav-item">
          <a href="/servers/<%= guild.id %>/welcome" class="nav-link <%= path === `/servers/${guild.id}/welcome` ? 'active' : 'text-dark' %>">
            <i class="fas fa-door-open me-2"></i>
            Welcome System
          </a>
        </li>
        <li class="nav-item">
          <a href="/servers/<%= guild.id %>/auto-responses" class="nav-link <%= path === `/servers/${guild.id}/auto-responses` ? 'active' : 'text-dark' %>">
            <i class="fas fa-reply-all me-2"></i>
            Auto Responses
          </a>
        </li>
        <li class="nav-item">
          <a href="/servers/<%= guild.id %>/temp-vc" class="nav-link <%= path === `/servers/${guild.id}/temp-vc` ? 'active' : 'text-dark' %>">
            <i class="fas fa-microphone me-2"></i>
            Voice Channels
          </a>
        </li>
        <li class="nav-item">
          <a href="/servers/<%= guild.id %>/suggestions" class="nav-link <%= path === `/servers/${guild.id}/suggestions` ? 'active' : 'text-dark' %>">
            <i class="fas fa-lightbulb me-2"></i>
            Suggestions
          </a>
        </li>
        <li class="nav-item">
          <a href="/servers/<%= guild.id %>/moderation" class="nav-link <%= path === `/servers/${guild.id}/moderation` ? 'active' : 'text-dark' %>">
            <i class="fas fa-gavel me-2"></i>
            Moderation
          </a>
        </li>
        <li class="nav-item">
          <a href="/servers/<%= guild.id %>/commands" class="nav-link <%= path === `/servers/${guild.id}/commands` ? 'active' : 'text-dark' %>">
            <i class="fas fa-terminal me-2"></i>
            Commands
          </a>
        </li>
      </ul>
      
      <hr>
      
      <div class="text-center">
        <a href="/dashboard" class="btn btn-sm btn-outline-secondary mb-2 w-100">
          <i class="fas fa-arrow-left me-1"></i> Back to Servers
        </a>
      </div>
    </div>
  </div>
</div>